{
  "name": "@better-builds/ts-duality",
  "description": "A no BS, easy-to-use utility for compiling TypeScript code to both ESM and CJS targets, as well as properly wiring up package.json exports.",
  "packageManager": "bun@1.3.1",
  "version": "0.0.1-beta.13",
  "type": "module",
  "bin": "./bin/ts-duality",
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=22.14.0"
  },
  "files": [
    "bin/*",
    "dist/**"
  ],
  "scripts": {
    "build": "bun run start --clean",
    "clean": "rm -rf dist/",
    "lint": "eslint './src'",
    "lint:fix": "eslint './src' --fix",
    "prepare": "husky",
    "start": "bun ./build.ts",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@better-builds/lets-version": "^1.4.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": ">=22",
    "@types/yargs": "^17.0.34",
    "eslint-config-react-yas": "^6.0.2",
    "prettier": "^3",
    "husky": "^9.1.7",
    "typescript": "^5"
  },
  "dependencies": {
    "@swc/core": "^1.13.5",
    "chalk": "^5.6.2",
    "detect-indent": "^7.0.2",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "package-manager-detector": "^1.5.0",
    "type-fest": "^5.1.0",
    "yargs": "^18.0.0"
  },
  "optionalDependencies": {
    "prettier": "^3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    "./compile-code": {
      "require": {
        "default": "./dist/cjs/compile-code.d.cjs"
      },
      "import": {
        "default": "./dist/esm/compile-code.mjs"
      }
    },
    "./constants": {
      "require": {
        "default": "./dist/cjs/constants.d.cjs"
      },
      "import": {
        "default": "./dist/esm/constants.mjs"
      }
    },
    "./copy-non-source-files": {
      "require": {
        "default": "./dist/cjs/copy-non-source-files.d.cjs"
      },
      "import": {
        "default": "./dist/esm/copy-non-source-files.mjs"
      }
    },
    "./exec-async": {
      "require": {
        "default": "./dist/cjs/exec-async.d.cjs"
      },
      "import": {
        "default": "./dist/esm/exec-async.mjs"
      }
    },
    "./find-tsconfig-file": {
      "require": {
        "default": "./dist/cjs/find-tsconfig-file.d.cjs"
      },
      "import": {
        "default": "./dist/esm/find-tsconfig-file.mjs"
      }
    },
    "./format-with-prettier-if-possible": {
      "require": {
        "default": "./dist/cjs/format-with-prettier-if-possible.d.cjs"
      },
      "import": {
        "default": "./dist/esm/format-with-prettier-if-possible.mjs"
      }
    },
    "./generate-tsconfigs": {
      "require": {
        "default": "./dist/cjs/generate-tsconfigs.d.cjs"
      },
      "import": {
        "default": "./dist/esm/generate-tsconfigs.mjs"
      }
    },
    "./get-common-root-path": {
      "require": {
        "default": "./dist/cjs/get-common-root-path.d.cjs"
      },
      "import": {
        "default": "./dist/esm/get-common-root-path.mjs"
      }
    },
    "./get-indentation": {
      "require": {
        "default": "./dist/cjs/get-indentation.d.cjs"
      },
      "import": {
        "default": "./dist/esm/get-indentation.mjs"
      }
    },
    ".": {
      "require": {
        "default": "./dist/cjs/index.d.cjs"
      },
      "import": {
        "default": "./dist/esm/index.mjs"
      }
    },
    "./inject-extra-exports": {
      "require": {
        "default": "./dist/cjs/inject-extra-exports.d.cjs"
      },
      "import": {
        "default": "./dist/esm/inject-extra-exports.mjs"
      }
    },
    "./logger": {
      "require": {
        "default": "./dist/cjs/logger.d.cjs"
      },
      "import": {
        "default": "./dist/esm/logger.mjs"
      }
    },
    "./resolve-import-path": {
      "require": {
        "default": "./dist/cjs/resolve-import-path.d.cjs"
      },
      "import": {
        "default": "./dist/esm/resolve-import-path.mjs"
      }
    },
    "./run-with-pm": {
      "require": {
        "default": "./dist/cjs/run-with-pm.d.cjs"
      },
      "import": {
        "default": "./dist/esm/run-with-pm.mjs"
      }
    },
    "./ts-duality-lib": {
      "require": {
        "default": "./dist/cjs/ts-duality-lib.d.cjs"
      },
      "import": {
        "default": "./dist/esm/ts-duality-lib.mjs"
      }
    },
    "./ts-duality": {
      "require": {
        "default": "./dist/cjs/ts-duality.d.cjs"
      },
      "import": {
        "default": "./dist/esm/ts-duality.mjs"
      }
    },
    "./types": {
      "require": {
        "default": "./dist/cjs/types.d.cjs"
      },
      "import": {
        "default": "./dist/esm/types.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "main": "./dist/cjs/index.cjs"
}
