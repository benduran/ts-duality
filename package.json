{
  "name": "@better-builds/ts-duality",
  "description": "A no BS, easy-to-use utility for compiling TypeScript code to both ESM and CJS targets, as well as properly wiring up package.json exports.",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=22.16.0"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "bun clean && bun src/ts-duality.ts",
    "clean": "rm -rf dist/",
    "fix:format": "prettier . --write",
    "start": "bun src/ts-duality.ts",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@cprussin/eslint-config": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": ">=22",
    "@types/yargs": "^17.0.34",
    "prettier": "^3.6.2",
    "type-fest": "^5.1.0"
  },
  "dependencies": {
    "@swc/core": "^1.13.5",
    "chalk": "^5.6.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "typescript": "^5",
    "yargs": "^18.0.0"
  }
}
